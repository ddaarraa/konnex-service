datasource db {
  provider = "postgresql"
}
generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

model UserCore {
  userId   Int    @id @default(autoincrement())
  username String @unique
  password String
  meta     UserMetaData?
}

model UserMetaData {
  userId      Int    @id 
  fullname    String
  age         Int
  address     String
  gender      String
  date_joined String
  userCore    UserCore @relation(fields: [userId], references: [userId], onDelete: Cascade)
}


